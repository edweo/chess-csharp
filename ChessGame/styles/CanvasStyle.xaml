<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Canvas" x:Key="CanvasWhiteSquare">
        <Setter Property="Background" Value="#f0d9b5"/>
        <Setter Property="Height" Value="90"/>
        <Setter Property="Width" Value="90"/>
    </Style>

    <Style TargetType="Canvas" x:Key="CanvasBlackSquare">
        <Setter Property="Background" Value="#b58863"/>
        <Setter Property="Height" Value="90"/>
        <Setter Property="Width" Value="90"/>
    </Style>

    <Style TargetType="Canvas" x:Key="CanvasSelectedSquare">
        <Setter Property="Background" Value="#FF6AAF33"/>
        <Setter Property="Height" Value="90"/>
        <Setter Property="Width" Value="90"/>
    </Style>

</ResourceDictionary>